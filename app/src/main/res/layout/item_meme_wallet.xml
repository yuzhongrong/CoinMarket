<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="meme"
            type="com.zksg.lib_api.beans.MemeBaseEntry" />

    </data>
<com.hjq.shape.layout.ShapeRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp10"
    android:gravity="center_vertical"
    app:shape_solidColor="@color/bg_layout_common"

    >


    <com.hjq.shape.view.ShapeImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        meme_imv="@{meme.logoURI}"
        app:shape_radius="@dimen/dp45"
        android:src="@mipmap/ic_solana_common"
        android:scaleType="fitXY"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_toRightOf="@+id/icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOL"
            android:textColor="@color/whitesmoke"
            android:textSize="@dimen/sp15"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:text="$158.27"
            android:textColor="@color/primaryTextGray"
            android:textSize="@dimen/sp12" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        >

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="200,023,009.56"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number_allprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp5"
            android:text="@string/str_f_default_n_a"
            android:textColor="@color/primaryTextGray"
            android:textSize="@dimen/sp12"
            android:textStyle="bold"
            app:shape_radius="@dimen/dp5" />

    </LinearLayout>

</com.hjq.shape.layout.ShapeRelativeLayout>
</layout>