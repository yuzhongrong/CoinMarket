<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp15"
    android:gravity="center_vertical"
    app:shape_solidColor="@color/c_101014"

    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_solana" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_centerInParent="true"
        >
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whitesmoke"
        android:textSize="@dimen/sp12"
        android:text="SOL"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextGray"
        android:textSize="@dimen/sp12"
        android:text="Vol $708.65k"
        android:layout_marginTop="@dimen/dp4"
        />



    </LinearLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dp25"
        android:layout_toLeftOf="@+id/change"
        android:text="$197.21"
        android:textColor="@color/white"
        android:textSize="@dimen/sp12"


        android:textStyle="bold" />

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/change"
        android:layout_width="@dimen/dp90"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="+0.02%"
        android:textColor="@color/white"
        android:textSize="@dimen/sp12"
        android:textStyle="bold"

        app:shape_radius="@dimen/dp5"
        app:shape_solidColor="@color/c_1bc89e" />
</com.hjq.shape.layout.ShapeRelativeLayout>