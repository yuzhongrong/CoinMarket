<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp15"
    app:shape_radius="@dimen/dp10"
    app:shape_solidColor="@color/white"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/dp8"
    android:layout_marginRight="@dimen/dp8"
    android:background="@color/white"
    android:elevation="@dimen/dp10"




    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_device"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/dp20"
        android:text="设备名称"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp10"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/btn_connect"
            android:layout_width="@dimen/dp75"
            android:layout_height="@dimen/dp35"
            android:text="@string/str_action_connect"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/dp14"
            app:shape_solidSelectedColor="@color/c_cff32b"
            app:shape_strokeColor="@color/c_cff32b"
            app:shape_strokeWidth="@dimen/dp1"
            app:shape_textSelectedColor="@color/white"
            android:gravity="center"
            app:shape_radius="@dimen/dp25"
            android:textStyle="bold"


            />

    </LinearLayout>



</com.hjq.shape.layout.ShapeLinearLayout>