<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.zksg.kudoud.state.RankingFragmentViewModel" />

        <variable
            name="adapter"
            type="com.kunminx.architecture.ui.adapter.SimpleDataBindingAdapter" />
    </data>

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/c_171717"
            >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp15"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_ranking"
                android:textSize="@dimen/sp20"
                android:textColor="@color/c_ffff00"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_last_updatetime"
                android:textSize="@dimen/sp15"
                android:textColor="@color/c_666666"

                android:layout_marginTop="@dimen/dp5"
                android:textStyle="bold"
                />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250"
            >

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp20"
                app:shape_radius="@dimen/dp10"
                app:shape_solidColor="@color/c_191919"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top2"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_device"
                    android:layout_marginTop="@dimen/dp20"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp15"
                    android:text="BitGet"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp10"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp15"
                    android:text="exchange"
                    android:textStyle="bold"

                    />


                <com.hjq.shape.view.ShapeButton
                    android:id="@+id/number"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp30"
                    android:text="@string/str_install"
                    android:textColor="@color/c_f6a50c"
                    android:gravity="center"
                    app:shape_radius="@dimen/dp25"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:shape_solidColor="@color/color_999999"
                    android:layout_marginTop="@dimen/dp8"
                    />

            </com.hjq.shape.layout.ShapeLinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp20"
                app:shape_radius="@dimen/dp10"

                app:shape_solidColor="@color/c_191919">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                   />

                <ImageView

                    android:layout_width="@dimen/dp75"
                    android:layout_height="@dimen/dp75"
                    android:layout_marginTop="@dimen/dp15"
                    android:src="@mipmap/ic_device" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="Binance"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exchange"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"

                    />

                <com.hjq.shape.view.ShapeButton

                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="center"
                    android:text="@string/str_install"
                    android:textColor="@color/c_f6a50c"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:shape_radius="@dimen/dp25"
                    app:shape_solidColor="@color/color_999999" />

            </com.hjq.shape.layout.ShapeLinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp20"
                app:shape_radius="@dimen/dp10"
                app:shape_solidColor="@color/c_191919"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top3"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_device"
                    android:layout_marginTop="@dimen/dp20"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp15"
                    android:text="gate.io"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp10"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp15"
                    android:text="exchange"
                    android:textStyle="bold"
                    />


                <com.hjq.shape.view.ShapeButton

                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp30"
                    android:text="@string/str_install"
                    android:textColor="@color/c_f6a50c"
                    android:gravity="center"
                    app:shape_radius="@dimen/dp25"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:shape_solidColor="@color/color_999999"
                    android:layout_marginTop="@dimen/dp8"
                    />

            </com.hjq.shape.layout.ShapeLinearLayout>


        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView

            linearAdapter="@{vm.coininstallAdapter}"
            cannotScrollVertically="@{true}"
            itemspace="@{15}"
            orientation="@{1}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"

            />

</LinearLayout>

</androidx.core.widget.NestedScrollView>
</layout>