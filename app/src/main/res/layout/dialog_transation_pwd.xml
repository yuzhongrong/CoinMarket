<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:shape_solidColor="@color/bg_layout_common"
    app:shape_topLeftRadius="@dimen/dp15"
    app:shape_topRightRadius="@dimen/dp15"


    >

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:shape_topLeftRadius="@dimen/dp15"
        app:shape_topRightRadius="@dimen/dp15"
        app:shape_solidColor="@color/bg_layout_common"
        android:padding="@dimen/dp15"

        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_common_dialog_tip"
            android:layout_gravity="center"
            />

    </com.hjq.shape.layout.ShapeLinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/c_2e2e2e"
        android:layout_above="@+id/rv_select"

        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/versionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_wallet_pwd"
                android:textColor="@color/white"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp20"

                />
            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp15"
                app:shape_strokeColor="@color/c_29313d"
                app:shape_strokeWidth="@dimen/dp1"
                app:shape_radius="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                >
                <com.hjq.shape.view.ShapeEditText
                    android:id="@+id/edit_input_pwd"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="@dimen/dp45"
                    android:layout_weight="1"
                    android:hint="@string/str_input_pwd"
                    android:textSize="@dimen/sp12"
                    android:background="@null"
                    android:textColorHint="@color/primaryTextGray"
                    android:textColor="@color/primaryTextGray"
                    android:paddingLeft="@dimen/dp10"
                    app:shape_radius="@dimen/dp10"
                    android:inputType="textPassword"
                    android:maxLength="18"
                    android:layout_marginRight="@dimen/dp15"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789.$#"
                    edit_pwd_handle="@{vm.pwd}"
                    textChangedListener="@{WalletPwdTextWatcher}"
                    />
                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@mipmap/ic_eye_hide"
                    android:layout_marginRight="@dimen/dp8"
                    android:onClick="@{()->click.ShowEye()}"
                    />

            </com.hjq.shape.layout.ShapeLinearLayout>
</LinearLayout>




    <com.hjq.shape.view.ShapeButton
        android:id="@+id/bt_confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:text="@string/str_ok"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/sp16"
        android:padding="@dimen/dp5"
        app:shape_radius="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginRight="@dimen/dp25"
        app:shape_solidColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:clickable="true"

        android:layout_marginTop="@dimen/dp105"
        android:layout_marginBottom="@dimen/dp15"
        app:shape_solidPressedColor="@color/c_a0a0ab"
        />





</com.hjq.shape.layout.ShapeLinearLayout>
