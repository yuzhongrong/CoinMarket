    </data>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp9"
        android:gravity="center_vertical"
        app:shape_radius="@dimen/dp35"
        app:shape_solidColor="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playericon"
            android:layout_width="@dimen/dp62"
            android:layout_height="@dimen/dp62"
            android:src="@mipmap/ic_baby_avator"
            android:padding="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp5"
            android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:textSize="14sp"
            android:text="音乐名称"/>


        <TextView
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_666666"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/dp5"
            android:text="5:20"/>

        </LinearLayout>

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/ic_music_last"
           android:layout_marginLeft="@dimen/dp30"

           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_player"
            android:layout_marginLeft="@dimen/dp14"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_music_next"
            android:layout_marginLeft="@dimen/dp14"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_player_model"
            android:layout_marginLeft="@dimen/dp20"
            />

    </com.hjq.shape.layout.ShapeLinearLayout>

</layout>