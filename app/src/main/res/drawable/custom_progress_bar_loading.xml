<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 未加载部分的颜色 -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- 设置未加载部分的颜色 -->
        </shape>
    </item>

    <!-- 加载部分的颜色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/colorAccent" /> <!-- 设置加载部分的颜色 -->
            </shape>
        </clip>
    </item>

</layer-list>